<!DOCTYPE html>
<html lang="en">

<%- include("partials/header") %>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">

            <!-- Sidebar -->
            <%- include("partials/sidebar"); -%>
                <!-- End of Sidebar -->

                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <!-- Topbar -->
                        <%- include("partials/topbar"); -%>
                            <!-- End of Topbar -->

                            <!-- Begin Page Content -->
                            <div class="container-fluid">

                                <!-- Page Heading -->
                                <h1 class="h3 mb-4 text-gray-800">Booking Details</h1>

                                <table class="table table-bordered">
                                    <thead>
                                      <tr>

                                      </tr>
                                    </thead>
                                    <tbody>
                                      <tr>
                                        <th scope="row">Booking ID : <%= booking.bookingID %></th>
                                        <th scope="row">Service No : <%= booking.service_no %></th>
                                      </tr>
                                      <tr>
                                        <th scope="row">Booking Date : <%= booking.bookingDate %></th>
                                        <th scope="row">Passenger Name : <%= booking.pax_name %></th>
                                      </tr>
                                      
                                      <tr>
                                        <th scope="row">Status : <%= booking.bookingStatus %></th>
                                        <th scope="row">Passenger Phone No : <%= booking.pax_phone.replace(/^(\d{2}).*(\d{2})$/, '$1******$2') %>
                                        </th>
                                      </tr>
                                      <tr>
                                        <th scope="row">Origin : <%= booking.origin %></th>
                                        <th scope="row">Bus Type : <%= booking.bus_type %></th>

                                      </tr>
                                      <tr>
                                        <th scope="row">Destination : <%= booking.destination %></th>
                                        <th scope="row">Payment Method : <%= booking.paymentMethod %></th>
                                      </tr>
                                      <tr>
                                        <th scope="row">Journey Date : <%= booking.journeyDate %></th>
                                        <% if (admin){ %>
                                            <th scope="row">Razorpay Order ID : <%= booking.RzpOrderID %>
                                        <% } else { %>
                                            <th scope="row">Razorpay Order ID : <%= booking.RzpOrderID.slice(0, 7) + '*********' + booking.RzpOrderID.slice(-2) %>
                                        <% } %>

                                        </th>
                                      </tr>
                                      <tr>
                                        <th scope="row">Fare : &#8377;<%= booking.fare %></th>
                                        <% if (admin){ %>
                                            <th scope="row">Transaction ID : <%= booking.transactionID %>
                                        <% } else { %>
                                            <th scope="row">Transaction ID : <%= booking.transactionID.slice(0, 7) + '*********' + booking.transactionID.slice(-3) %>
                                        <% } %>
                                        </tr>
                                    </tbody>
                                  </table>
                                
                                  <hr class="mt-5">

                                  <h1 class="h3 mt-5 mb-4 text-center text-gray-800">Booking Modification History</h1>

                                  <% if (modified != null){ %>
                                    <div class="card shadow mb-4">
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table table-bordered" id="dataTable" width="100%"
                                                    cellspacing="0">
                                                    <thead>
                                                        <tr>
                                                            <th>Booking ID</th>
                                                            <th>Service No</th>
                                                            <th>Old Journey Date</th>
                                                            <th>New Journey Date</th>
                                                            <th>Modified Seats</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td style="font-weight: bold;"><%= modified.bookingID %></td>
                                                            <td><%= modified.service_no %></td>
                                                            <td><%= modified.previousJourneyDate %></td>
                                                            <td><%= modified.newJourneyDate %></td>
                                                            <td><%= modified.modifiedSeats %></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                  <% } else { %>
                                    <p class="mt-3 text-center">No modification history found for this booking</p>
                                  <% } %>
                                  



                            </div>
                            <!-- /.container-fluid -->

                    </div>
                    <!-- End of Main Content -->

                    <!-- Footer -->
                    <%- include("partials/footer") %>
                        <!-- End of Footer -->

                </div>
                <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">Ã—</span>
                        </button>
                    </div>
                    <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                    <div class="modal-footer">
                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                        <a class="btn btn-primary" href="/logout">Logout</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap core JavaScript-->
        <script src="vendor/jquery/jquery.min.js"></script>
        <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

        <!-- Core plugin JavaScript-->
        <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
        <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

        <!-- Custom scripts for all pages-->
        <script src="js/sb-admin-2.min.js"></script>


    </body>

</html>