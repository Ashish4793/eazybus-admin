<!DOCTYPE html>
<html lang="en">

<%- include("partials/header")  %>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include("partials/sidebar"); -%>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include("partials/topbar"); -%>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800">Modify Booking</h1>

                    <div class="alert alert-warning" role="alert">
                        <strong>Note:</strong> Make sure to block seats before modifying ticket!
                    </div>

                    <form id="myForm" style="width: 20rem;" method="post" action="/modify-booking-confirm">
                        <div class="mb-3">
                          <label class="form-label">Booking ID</label>
                          <input name="bookingID" readonly value="<%= booking.bookingID %>" type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Service No</label>
                            <input name="service_no" readonly value="<%= booking.service_no %>" type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Exisiting Journey Date</label>
                            <input name="existingJourneyDate" readonly value="<%= booking.journeyDate %>" type="text" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Exisiting Seats</label>
                            <input name="existing_seats" readonly value="<%= booking.seats %>" type="text" class="form-control">
                        </div>
                        <input type="hidden" name="userID" value="<%= booking.userID %>" id="">
                        <div class="mb-3">
                            <label class="form-label">New seats numbers</label>
                            <input name="new_seats" required type="text" class="form-control">
                            <label style="font-size: 13px;" class="form-label">Please specify the correct seat number that you blocked.</label>
                        </div>
                        <div class="mb-3">
                            <div class="form-group">
                                <label class="form-label">Departure Date</label>
                                <input class="form-control" value="<%= booking.journeyDate %>"
                                  style="width: 20rem;" name="d_date" autocomplete="off"
                                  type="text" id="datepicker" required 
                                  oninvalid="this.setCustomValidity('Please choose a date')" oninput="setCustomValidity('')">
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include("partials/footer")  %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">Ã—</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="/logout">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script src="vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Custom scripts for all pages-->
    <script src="js/sb-admin-2.min.js"></script>
<script>
    $(function () {
        $("#datepicker").datepicker({
          dateFormat: "dd-mm-yy",
          maxDate: "1D",
          minDate: "0D"
        });
      });
</script>

</body>

</html>